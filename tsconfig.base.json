{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@easy-pps": ["libs/html-parser/cheerio/src/index.ts"],
      "@easy-pps/html-parser/contracts": [
        "libs/html-parser/contracts/src/index.ts"
      ],
      "@pps-easy/recaptcha/contracts": [
        "libs/recaptcha/contracts/src/index.ts"
      ],
      "@pps-easy/recaptcha/domain": ["libs/recaptcha/domain/src/index.ts"],
      "@pps-easy/recaptcha/google": ["libs/recaptcha/google/src/index.ts"],
      "@pps-easy/shadcn/utils": ["libs/shadcn/utils/src/index.ts"],
      "@pps-easy/ui": ["libs/ui/src/components/*"],
      "@pps-easy/ui/*": ["libs/ui/src/components/*"],
      "@pps-easy/ui/styles": ["libs/ui/src/styles/*"],
      "@pps-easy/ui/styles/*": ["libs/ui/src/styles/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
